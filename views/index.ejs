<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BLOG</title>
    <link rel="stylesheet" href="./styles.css" />
  </head>
  <body>
    <div class="top">
      <div class="header">
        <div class="blog">BLOCSOC</div>
        <div class="sign_in"><a href="/logout">Logout</a></div>
        <div class="sign_in"><a href="/sign_in">Sign in</a></div>
      </div>
      <div class="top_content">
        <div class="hd1">Stay curious</div>
        <div class="hd2">
          Discover stories, thinking, and expertise from writers on any topic.
        </div>
        <div class="sign_in new"><a href="/new">New Blog</a></div>
      </div>
    </div>
    <div class="hd3">This week stories</div>
    <div class="border">
      <div class="container">
        <% articles.forEach(function(article) { %>
        <div class="cont">
          <div class="title">
            <h1><%= article.title %></h1>
          </div>
          <div class="date"><%= article.date %></div>
          <div class="desc"><%= article.desc %></div>
          <div class="content"><%= article.content %></div>
          <div class="row">
            <div class="edit"><a href="/edit/<%=article.id%>">Edit</a></div>
            <div class="delete">
              <form
                method="POST"
                action="/delete/<%=article.id%>?_method=DELETE"
              >
                <button type="submit" class="delete1">Delete</button>
              </form>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <div class="connect">
      <div class="connect_head"><p>connect with us</p></div>
      <div class="connect_details">
        <div class="link1">link1</div>
        <div class="link2">link2</div>
        <div class="link3">link3</div>
        <div class="link4">link4</div>
        <div class="link5">link5</div>
        <div class="link6">link6</div>
        <div class="link7">link7</div>
      </div>
    </div>
  </body>
</html>
